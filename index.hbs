{{!< default}}

<header class="page-header">
    {{#is "home"}}
        {{#if @site.description}}
            <h1 class="page-header-title">{{@site.description}}</h1>
        {{/if}}
    {{/is}}
    {{#is "author"}}
        {{#author}}
            <h1 class="page-header-title">{{name}}</h1>
            {{#if bio}}
                <p class="page-header-excerpt">{{bio}}</p>
            {{/if}}
        {{/author}}
    {{/is}}
    {{#is "tag"}}
        {{#tag}}
            <h1 class="page-header-title">{{name}}</h1>
            {{#if description}}
                <p class="page-header-excerpt">{{description}}</p>
            {{/if}}
        {{/tag}}
    {{/is}}
</header>

{{> "post-list"}}